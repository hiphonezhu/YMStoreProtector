<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yunmoxx.store.protector">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>

    <application
        android:icon="@drawable/icon_app_logo"
        android:label="@string/app_name"
        android:theme="@style/Theme.YMStoreProtector">

        <activity
            android:name="com.yunmoxx.store.protector.EmptyActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".ProtectorService"
            android:exported="true">
            <intent-filter>
                <action android:name="com.yunmoxx.store.protector.ProtectorService" />
            </intent-filter>
        </service>

        <receiver android:name=".PackageListener">
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_INSTALL" />
                <action android:name="android.intent.action.PACKAGE_REPLACED" />
                <data android:scheme="package" />
            </intent-filter>
        </receiver>
    </application>
</manifest>